{
    "name": "Psi4 Development",
    "image": "jetturney/psi4-development:latest",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined",
        "--userns=host"
    ],
    "settings": {
        "terminal.integrated.profiles.linux": {
            "zsh": {
                "path": "zsh"
            },
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.cwd": "${relativeFileDirname}",
        "files.eol": "\n",
        "resmon.show.battery": false,
        "resmon.show.cpufreq": false,
        // "cmake.sourceDirectory": "${workspaceFolder}/psi4",
        // "cmake.configureSettings": {
        // "CMAKE_MODULE_PATH": "${workspaceFolder}/cmake"
        // }
        // "cmake.copyCompileCommands": "${sourceDir}"
    },
    "remoteUser": "vscode",
    "extensions": [
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "llvm-vs-code-extensions.vscode-clangd",
        "vadimcn.vscode-lldb",
        // "matepek.vscode-catch2-test-adapter",
        "mutantdino.resourcemonitor",
        "vsls-contrib.codetour"
    ]
}